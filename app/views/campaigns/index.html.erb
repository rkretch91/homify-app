<% @campaigns.each do |campaign| %>
  <%= link_to campaign_path(campaign) do %>
    <p><%= campaign.title %></p>
    <p><%= campaign.tags %></p>
    <p><%= campaign.estimated_duration.to_s + " Months" %></p>
  <% end %>
<% end %>

<% if policy(Campaign).new? %>
  <%= link_to "New Campaign", new_campaign_path %>
<% end %>
